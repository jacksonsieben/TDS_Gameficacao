@page
@model ProjetoGerenciamentoRestaurante.RazorPages.Pages.Categoria.Index
<h1>Categoria Cadastradas</h1>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div>
    <table class="table table-bordered table-sm table-hover-custom">
        <thead>
            <tr>
                <td scope="col">ID Categoria</td>
                <td scope="col">@Html.DisplayNameFor(model => model.CategoriaList[0].Nome) </td>
                <td scope="col">@Html.DisplayNameFor(model => model.CategoriaList[0].Descricao)</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoriaModel in Model.CategoriaList)
            {
                <tr>
                    <td>@Html.DisplayFor(model => categoriaModel.CategoriaId)</td>
                    <td>@Html.DisplayFor(model => categoriaModel.Nome)</td>
                    <td>@Html.DisplayFor(model => categoriaModel.Descricao)</td>
                    <td>
                        <a class="btn btn-sm btn-secondary active"  asp-page="./Edit" asp-route-id="@categoriaModel.CategoriaId"> <i class="fa fa-pencil"></i> </a>
                        <a class="btn btn-secondary btn-sm btn-success" asp-page="./Details" asp-route-id="@categoriaModel.CategoriaId"> <i class="fa fa-eye"></i> </a>
                        <a class="btn btn-secondary btn-sm btn-danger" asp-page="./Delete" asp-route-id="@categoriaModel.CategoriaId"> <i class="fa fa-trash"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
<p style="text-align:center"><a class="btn btn-primary" role="button" asp-page="./Create"> <strong>Cadastrar</strong></a></p>
</div>